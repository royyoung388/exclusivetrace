<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arcmenu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map">

    <ImageView
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30px"
        android:layout_marginTop="60px"
        android:src="@drawable/map_fog" />

    <RelativeLayout
        android:id="@+id/map_memory_layout"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/map_start_memory_iamge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_start_memory" />

        <ImageView
            android:id="@+id/map_end_memory_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map_end_memory" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/map_arcmenu_bt"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="50px"
        android:src="@drawable/arcmenu_bt" />
</RelativeLayout>