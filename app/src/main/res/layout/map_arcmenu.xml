<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arcmenu="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.exclusivetrace.exclusivetrace.arcmenu.ArcMenu
        android:id="@+id/map_arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30px"
        android:layout_marginLeft="50px"
        arcmenu:position="left_bottom"
        arcmenu:radius="115dp">

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:src="@drawable/arcemun_extra" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:src="@drawable/arcmenu_changepwd" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:src="@drawable/arcmenu_adddiary" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:src="@drawable/arcmenu_diaryitem" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:src="@drawable/arcmenu_cousomized" />

        <ImageView
            android:layout_width="144px"
            android:layout_height="144px"
            android:src="@drawable/arcmenu_login" />

        <ImageView
            android:layout_width="250px"
            android:layout_height="250px"
            android:src="@drawable/arcmenu_bt" />
    </com.exclusivetrace.exclusivetrace.arcmenu.ArcMenu>

</LinearLayout>